<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <!-- Guessing Game Servlet -->
    <servlet>
        <servlet-name>GuessController</servlet-name>
        <servlet-class>com.idunno.GuessController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuessController</servlet-name>
        <url-pattern>/guessinggame</url-pattern>
    </servlet-mapping>

    <!-- Quiz Game Servlet -->
    <servlet>
        <servlet-name>QuizController</servlet-name>
        <servlet-class>com.idunno.QuizController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizController</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

    <!-- Quiz Selection Servlet -->
    <servlet>
        <servlet-name>PickQuizController</servlet-name>
        <servlet-class>com.idunno.PickQuizController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PickQuizController</servlet-name>
        <url-pattern>/chooseQuiz</url-pattern>
    </servlet-mapping>

    <!-- Quiz Login Servlet -->
    <servlet>
        <servlet-name>QuizLoginController</servlet-name>
        <servlet-class>com.idunno.QuizLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizLoginController</servlet-name>
        <url-pattern>/quizLogin</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>