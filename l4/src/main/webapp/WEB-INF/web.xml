<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Guessing Game Servlet -->
    <servlet>
        <servlet-name>GuessController</servlet-name>
        <servlet-class>com.idunno.GuessController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuessController</servlet-name>
        <url-pattern>/guessinggame</url-pattern>
    </servlet-mapping>

    <!-- Quizz Game Servlet -->
    <servlet>
        <servlet-name>QuizzController</servlet-name>
        <servlet-class>com.idunno.QuizzController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizzController</servlet-name>
        <url-pattern>/quizz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PickQuizzController</servlet-name>
        <servlet-class>com.idunno.PickQuizzController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PickQuizzController</servlet-name>
        <url-pattern>/pickSubject</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QuizzLoginController</servlet-name>
        <servlet-class>com.idunno.QuizzLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizzLoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>